@model List<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="col-lg-9">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Soyadı</th>
                    <th>Ünvanı</th>
                    <th>Ülkesi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.TitleOfCourtesy</td>
                        <td>@item.Country</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-3">
        <div class="card">
            <div class="card-header">
                <h2>Bugün Doğan Çalışanımız</h2>
            </div>
            <div class="card-body">
               @foreach (var item in ViewBag.DogumGunu)
               {
                  <ul>
                      <li>@item.FirstName @item.LastName</li>
                  </ul>
               }
            </div>
        </div>
       
    </div>
</div>