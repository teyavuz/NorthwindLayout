@model Product
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="row">
        <div class="card">
            <div class="card-header">
                @Html.ActionLink("Ürün Listesi", "Index", null, new { @class = "btn btn-primary" })
            </div>
            <div class="card-body">
                <div class="col-lg-12">
                    @using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
                    {
                        //HiddenFor form ile beraber arkaplanda görünmez olarak hangi propertynin gideceğini belirler. Tanımlamamızın sebebi ise; ürün güncelleme esnasında o ürüne ait Id'nin de gitmesi gerekli olduğu için HiddenFor tanımlamamız gerekli.
                        @Html.HiddenFor(x=>x.ProductID)
                        <div class="form-group">
                            <label>Ürün Adı</label>
                            @Html.TextBoxFor(x => x.ProductName, null, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Fiyat</label>
                            @Html.TextBoxFor(x => x.UnitPrice, null, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Stok</label>
                            @Html.TextBoxFor(x => x.UnitsInStock, null, new { @class = "form-control" })
                        </div>


                        <button type="submit" class="btn btn-success">Kaydet</button>


                    }
                </div>
            </div>
        </div>
    </div>

