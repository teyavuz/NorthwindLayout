@model Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ürün Ekle</h2>
<div class="row">
    <div class="card">
        <div class="card-header">
            @Html.ActionLink("Ürün Listesi","Index",null,new { @class="btn btn-primary"})
        </div>
        <div class="card-body">
            <div class="col-lg-12">
                @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>Ürün Adı</label>
                        @Html.TextBoxFor(x => x.ProductName, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Fiyat</label>
                        @Html.TextBoxFor(x => x.UnitPrice, null, new { @class = "form-control",type="number" })
                    </div>
                    <div class="form-group">
                        <label>Stok</label>
                        @Html.TextBoxFor(x => x.UnitsInStock, null, new { @class = "form-control" })
                    </div>


                    <button type="submit" class="btn btn-success">Kaydet</button>


                }
            </div>
        </div>
    </div>
</div>


