@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ürünler</h2>
<div class="row">
   
    <div class="card">
        <div class="card-header">
            <div class="text-right">
                @if (@TempData["Info"] != null)
                {
                    @TempData["Info"]
                }
                @Html.ActionLink("Ürün Ekle", "AddProduct", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ürün ID</th>
                    <th>Ürün Adı</th>
                    <th>Ürün Fiyat</th>
                    <th>Ürün Stok</th>
                    <th>Ürün Kategori</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.UnitsInStock</td>
                        @if (item.CategoryID == null)
                        {
                            <td class="text-danger">Kategori Belirtilmemiş</td>
                        }
                        else
                        {
                            <td>@item.Category.CategoryName</td>
                        }
                    <td>
                        @Html.ActionLink("Düzenle", "UpdateProduct", new { id=item.ProductID}, new { @class = "btn btn-warning" })
                        |
                        @Html.ActionLink("Sil", "DeleteProduct", new { id=item.ProductID}, new { @class = "btn btn-danger" })
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

